{
  "ICAL-VCALENDAR": {
    "description": "VCALENDAR component (root calendar container)",
    "prefix": "ical-cal",
    "body": [
      "BEGIN:VCALENDAR",
      "VERSION:2.0",
      "PRODID:-//VSCode iCalendar Snippets//CN",
      "CALSCALE:GREGORIAN",
      "METHOD:PUBLISH",
      "X-WR-CALNAME:${1:My Calendar}",
      "X-WR-TIMEZONE:${2:Asia/Shanghai}",
      "X-WR-CALDESC:${3:Description}",
      "$TM_SELECTED_TEXT$0",
      "END:VCALENDAR"
    ]
  },
  "ICAL-VTIMEZONE": {
    "description": "VTIMEZONE component (root calendar container)",
    "prefix": "ical-timezone",
    "body": [
      "BEGIN:VTIMEZONE",
      "TZID:${1:Asia/Shanghai}",
      "X-LIC-LOCATION:${1:Asia/Shanghai}",
      "BEGIN:STANDARD",
      "TZOFFSETFROM:${2:+0800}",
      "TZOFFSETTO:${2:+0800}",
      "TZNAME:CST",
      "DTSTART:19700101T000000",
      "END:STANDARD",
      "END:VTIMEZONE"
    ]
  },
  "ICAL-VEVENT-TIMED": {
    "description": "VEVENT component (timed event with timezone)",
    "prefix": "ical-event-time",
    "body": [
      "BEGIN:VEVENT",
      "UID:${1:${CURRENT_YEAR}${CURRENT_MONTH}${CURRENT_DATE}T${CURRENT_HOUR}${CURRENT_MINUTE}${CURRENT_SECOND}@example.com}",
      "DTSTAMP:${CURRENT_YEAR}${CURRENT_MONTH}${CURRENT_DATE}T${CURRENT_HOUR}${CURRENT_MINUTE}${CURRENT_SECOND}Z",
      "CREATED:${CURRENT_YEAR}${CURRENT_MONTH}${CURRENT_DATE}T${CURRENT_HOUR}${CURRENT_MINUTE}${CURRENT_SECOND}Z",
      "LAST-MODIFIED:${CURRENT_YEAR}${CURRENT_MONTH}${CURRENT_DATE}T${CURRENT_HOUR}${CURRENT_MINUTE}${CURRENT_SECOND}Z",
      "SEQUENCE:0",
      "DTSTART;TZID=${2:Asia/Shanghai}:${3:20260110T090000}",
      "DTEND;TZID=${2:Asia/Shanghai}:${4:20260110T100000}",
      "SUMMARY:${5:Event title}",
      "DESCRIPTION:${7:Event description}",
      "LOCATION:${6:Location}",
      "STATUS:CONFIRMED",
      "TRANSP:TRANSPARENT",
      "END:VEVENT"
    ]
  },
  "ICAL-VEVENT-ALLDAY": {
    "description": "VEVENT component (all-day event)",
    "prefix": "ical-event-day",
    "body": [
      "BEGIN:VEVENT",
      "UID:${1:${CURRENT_YEAR}${CURRENT_MONTH}${CURRENT_DATE}T000001@example.com}",
      "DTSTAMP:${CURRENT_YEAR}${CURRENT_MONTH}${CURRENT_DATE}T${CURRENT_HOUR}${CURRENT_MINUTE}${CURRENT_SECOND}Z",
      "CREATED:${CURRENT_YEAR}${CURRENT_MONTH}${CURRENT_DATE}T${CURRENT_HOUR}${CURRENT_MINUTE}${CURRENT_SECOND}Z",
      "LAST-MODIFIED:${CURRENT_YEAR}${CURRENT_MONTH}${CURRENT_DATE}T${CURRENT_HOUR}${CURRENT_MINUTE}${CURRENT_SECOND}Z",
      "SEQUENCE:0",
      "DTSTART;VALUE=DATE:${2:20260110}",
      "DTEND;VALUE=DATE:${3:20260111}",
      "SUMMARY:${4:All-day event}",
      "DESCRIPTION:${5:Event description}",
      "STATUS:CONFIRMED",
      "TRANSP:TRANSPARENT",
      "END:VEVENT"
    ]
  },
  "ICAL-VALARM-DISPLAY": {
    "description": "VALARM component (display reminder, relative)",
    "prefix": "ical-alarm",
    "body": [
      "BEGIN:VALARM",
      "ACTION:DISPLAY",
      "DESCRIPTION:${1:Reminder}",
      "TRIGGER:${2:-P1D}",
      "END:VALARM"
    ]
  },
  "ICAL-RELATED-TO": {
    "description": "RELATED-TO property (event relationship)",
    "prefix": "ical-related",
    "body": [
      "RELATED-TO;RELTYPE=${1:PARENT|CHILD|SIBLING}:${2:event-uid}"
    ]
  }
}